<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
  <h1 class="my-3">Editing Book</h1>

  <% if @book.errors.any? %>
  <h3 class="mt-3 text-break"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

    <%= form_with model: @book, url:book_path(@book), method: :patch do |f| %>
    <h5 class="mb-3">Title</h5>
    <%= f.text_field :title,class:"mb-3 w-100" %>

    <h5 class="mb-3">Opinion</h5>
    <%= f.text_area :body,class: "w-100" %>

    <div>
    <%= f.submit "Update Book" ,class:"btn btn-success w-35 text-light my-3" %>
    </div>
    <% end %>

    <span class="show_edit"><%= link_to "Show", book_path(@book.id) %></span>
    <span>|</span>
    <span class="show_back"><%= link_to "Back", books_path %></span>
  </div>
</div>
