<div> <%= flash[:notice] %></div>
<div class="container">
  <% if @book.errors.any? %>
  <h3 class="mt-3"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <!-- ここから -->
    <%= render 'list', user: @user ,book: @book%>
      <!-- ここまで -->
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <tr class="border-top style:border-light">
          <th style="width: 15% "></th>
          <th style="width: 35%">Title</th>
          <th style="width: 50%">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top style:border-light">
          <td><%= link_to user_path(book.user.id) do%>
            <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %></td>
          <td class="text-break"><%= link_to book.title,book_path(book.id) %></td>
          <td class="text-break"><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
