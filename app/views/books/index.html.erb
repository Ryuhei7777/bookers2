<div class="container">
  <div class="row">
    <div class="col-5">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(200,200) %>
      <table class="w-75 mb-5">
        <tr class="border-top border-dark">
          <th class="p-3">name</th>
          <th class="p-3"><%= @user.name %></th>
        </tr>
        <tr class="border-top border-dark">
          <th class="p-3">introduction</th>
        </tr>
      </table>

      <div>
        <%= link_to edit_user_path(@user.id),class: "btn btn-light btn btn-outline-dark w-75" , method: :get do%>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h1 class="mt-3">New book</h1>
      <%= form_with model: @book do |f| %>
        <h5 class="mt-2">Title</h5>
        <%= f.text_field :title,class:"w-75" %>
        <h5 class="mt-3">Opinion</h5>
        <%= f.text_area :body,class:"w-75" %>
        <div class="Create_book mt-3">
        <%= f.submit 'Create Book',class:"btn btn-success w-10 text-light" %>
      <% end %>
      </div>

    </div>

    <div class="col-6">
      <h1>Books</h1>
      <table>
        <tr class="border-top border-dark">
          <th class="w-25 py-2 pl-3"></th>
          <th class="w-25 py-2 pl-3">Title</th>
          <th class="w-75 py-2 pl-3">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top  border-5 border-secondary">
          <td class="w-25 py-2 pl-3"><%= image_tag book.user.get_profile_image(100,100)%></td>
          <td class="w-25 py-2 pl-3 text-break"><%= book.title %></td>
          <td class="w-75 py-2 pl-3 text-break"><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>
