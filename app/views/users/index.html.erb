<div class="container">
  <div class="row">
    <div class="col">
      <!-- ここから -->
    <%= render 'books/list', user: @user ,book: @book%>
      <!-- ここまで -->
    </div>

    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <tr class="border-top style:border-light">
          <th style="width: 30% ">image</th>
          <th style="width: 45%">name</th>
          <th style="width: 25%"></th>
        </tr>
        <tr class="border-top style:border-light">
          <% @users.each do |user| %>
          <td><%= image_tag user.get_profile_image(100,100)%></td>
          <td><%=user.name%></td>
          <td><%= link_to "Show",user_path(user.id) %></td>
        </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
