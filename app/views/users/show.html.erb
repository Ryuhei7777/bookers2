<div class="container">
  <div class="row">
    <div class="col">
      <!-- ここから -->
    <%= render 'books/list', user: @user ,book: @book%>
      <!-- ここまで -->
    </div>

    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <tr class="border-top style:border-light">
          <th style="width: 15% "></th>
          <th style="width: 35%">Title</th>
          <th style="width: 50%">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top style:border-light">
          <td><%= image_tag book.user.get_profile_image(100,100)%></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
