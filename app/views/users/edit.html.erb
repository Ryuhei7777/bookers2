<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

    <h1 class="my-3">User info</h1>

    <% if @user.errors.any? %>
    <h3 class="mt-3 text-break"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @user, url:user_path(@user), method: :patch do |f| %>

    <h5 class="my-3">Name</h5>
    <div class="mb-4"><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",class: "w-75"%></div>

    <h5 class="mb-3">Image</h5>
    <div class="mb-4"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>

    <h5 class="mb-3">Introduction</h5>
    <div><%= f.text_field :introduction,class: "w-75"%></div>

    <div class="mt-3 mb-4"><%= f.submit "Update User", class:"btn btn-secondary w-25 text-light"%></div>
    <% end %>
  </div>
</div>